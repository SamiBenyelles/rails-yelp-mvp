<h1><%= @restaurant.name %> was found : </h1>
<h2><%= @restaurant.category %></h2>

<%= link_to restaurant_path(@restaurant),
            method: :delete,
            class: 'btn btn-danger btn-xs',
            data: { confirm: 'Are you sure ?'} do %>

  <i class="fas fa-trash-alt"></i>

<% end %>


<p>at <%= @restaurant.address %> - rated
  <% @restaurant.reviews.each do |review| %>
  <%= review.content  %>
  <%= review.rating %>
  <% end %>
  </p>


<%= link_to 'Back', restaurants_path, class: 'btn btn-secondary' %>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-warning' %>
